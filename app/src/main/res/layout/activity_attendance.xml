<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context="com.vip.android.viptechnician.AttendanceActivity">

    <RelativeLayout
        android:id="@+id/linear_main"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_login"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="24dp"
            android:text="Mark Attendance"
            />

        <ImageView
            android:id="@+id/image_profile_pic"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_engineer_service"
            android:layout_marginTop="24dp"
            android:layout_below="@id/text_login"
            android:layout_width="150dp"
            android:layout_height="150dp" />
        <Button
            android:id="@+id/button_present"
            android:layout_below="@id/image_profile_pic"
            android:layout_centerInParent="true"
            android:background="@drawable/light_blue_gradient"
            android:text="Present"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

        <Button
            android:id="@+id/button_week_off"
            android:layout_below="@id/button_present"
            android:layout_centerInParent="true"
            android:background="@drawable/light_blue_gradient"
            android:text="Weekly OFF"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:paddingLeft="60dp"
            android:paddingRight="60dp"
            android:layout_marginTop="24dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/waitforlocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="12dp"
        android:background="@color/red"
        android:text="Please wait while we fetch your location..."
        android:textColor="#FFFFFF"
        />

</RelativeLayout>
