<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.vip.android.viptechnician.CategoriesActivity">

    <LinearLayout
        android:id="@+id/linear_user"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/usericon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user"
            android:layout_centerHorizontal="true"

            />

        <com.vip.android.viptechnician.util.MonserattTextview
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textColor="#000000"
            android:textSize="20sp"
            android:padding="4dp"

            />

    </LinearLayout>

    <com.vip.android.viptechnician.util.MonserattTextview
        android:id="@+id/text_ticket_count"
        android:text="Open Ticket Count Sold"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/blue_border_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.vip.android.viptechnician.util.MonserattTextview
        android:id="@+id/text_ticket_count_unsold"
        android:text="Open Ticket Count Unsold"
        android:layout_below="@id/text_ticket_count"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/blue_border_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




    <com.vip.android.viptechnician.util.MonserattTextview
        android:id="@+id/text_closed_ticket_count"
        android:text="Closed Ticket Count"
        android:textSize="14dp"
        android:textColor="#000000"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/blue_border_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.vip.android.viptechnician.util.MonserattTextview
        android:id="@+id/text_ticket_amount"
        android:text="Ticket Amount"
        android:textSize="14dp"
        android:textColor="#000000"
        android:visibility="gone"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:padding="10dp"
        android:background="@drawable/blue_border_rect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <com.vip.android.viptechnician.util.MonserattTextview
        android:visibility="gone"
        android:id="@+id/reports"
        android:text="Reports"
        android:textSize="14dp"
        android:textColor="@color/white"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="40dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_bars"
        android:drawablePadding="12dp"
        android:background="@drawable/light_blue_gradient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <androidx.cardview.widget.CardView
        android:id="@+id/ticket_cardview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:clipToPadding="false"
        android:clipChildren="false"
        app:cardBackgroundColor="@color/white"
        app:cardElevation="8dp"
        android:layout_marginTop="26dp"
        android:layout_gravity="center_horizontal"
        >

        <com.vip.android.viptechnician.util.MonserattTextViewRegular
            android:id="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tickets"
            android:textAlignment="center"
            android:textColor="@color/darkblue"
            android:textSize="16sp"
            android:gravity="center"
            android:paddingTop="40dp"
            android:paddingBottom="40dp"
            android:paddingLeft="44dp"
            android:paddingRight="44dp"
            />

    </androidx.cardview.widget.CardView>

