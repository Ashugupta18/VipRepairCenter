<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/blue_gradient"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context="com.vip.android.viptechnician.MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="90dp"
        android:src="@drawable/vip"
        android:layout_gravity="center"

        />

    <com.vip.android.viptechnician.util.MonserattTextview
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="REPAIR CENTER"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="14dp"

        />


    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.vip.android.viptechnician.util.MonteserattEditText
        android:id="@+id/mobilenum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Mobile"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:inputType="number"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:drawableLeft="@drawable/ic_telephone"
        android:drawablePadding="12dp"
        />
    </com.google.android.material.textfield.TextInputLayout>



    <com.google.android.material.textfield.TextInputLayout
        android:textColorHint="#FFFFFF"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.vip.android.viptechnician.util.MonteserattEditText
        android:id="@+id/passwvalue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:inputType="textPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:textColorHint="#FFFFFF"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_key"
        android:drawablePadding="12dp"
        />
    </com.google.android.material.textfield.TextInputLayout>


    <com.vip.android.viptechnician.util.MonserattTextview
        android:id="@+id/forgot_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password?"
        android:layout_marginTop="20dp"
        android:textColor="#AAFFFFFF"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="8dp"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"

        />


    <com.vip.android.viptechnician.util.MonserattTextViewRegular
        android:id="@+id/loginusr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/red_gradient"


        />




