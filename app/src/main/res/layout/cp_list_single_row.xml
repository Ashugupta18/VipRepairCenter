<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:divider="@android:color/transparent"
    app:cardElevation="4dp"
    app:cardCornerRadius="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/layout_main_cp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_cp_id"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vip.android.viptechnician.util.MonserattTextViewRegular
                android:id="@+id/text_cp_id"
                android:text="SAP Code:"
                android:textSize="16dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.vip.android.viptechnician.util.MonserattTextview
                android:id="@+id/text_id_value"
                android:text=""
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cp_name"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vip.android.viptechnician.util.MonserattTextViewRegular
                android:id="@+id/text_name"
                android:text="Name:"
                android:textSize="16dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.vip.android.viptechnician.util.MonserattTextview
                android:id="@+id/text_name_value"
                android:text="Abhiraj Shetye"
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cp_phone"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vip.android.viptechnician.util.MonserattTextViewRegular
                android:id="@+id/text_phone"
                android:text="Phone:"
                android:textSize="16dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.vip.android.viptechnician.util.MonserattTextview
                android:id="@+id/text_phone_value"
                android:text="022-1234567"
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_cp_address"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <com.vip.android.viptechnician.util.MonserattTextViewRegular
                android:id="@+id/text_address"
                android:text="Address:"
                android:textSize="16dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.vip.android.viptechnician.util.MonserattTextview
                android:id="@+id/text_address_value"
                android:text="address line,address line,address line"
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_ticket_count"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.vip.android.viptechnician.util.MonserattTextViewRegular
                android:id="@+id/text_count"
                android:text="Open Ticket Count:"
                android:textSize="16dp"
                android:padding="5dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.vip.android.viptechnician.util.MonserattTextview
                android:id="@+id/text_count_ticket"
                android:text="05"
                android:textSize="14dp"
                android:textColor="#000000"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>