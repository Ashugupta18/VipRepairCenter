<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linear_mobile_no"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <com.vip.android.viptechnician.util.MonteserattEditText
        android:id="@+id/edit_mobile_no"
        android:layout_weight="7"
        android:textSize="14dp"
        android:inputType="number"
        android:background="@drawable/black_border"
        android:hint="Enter Mobile No"
        android:textColor="#000000"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    <com.vip.android.viptechnician.util.MonserattTextview
        android:id="@+id/text_submit_no"
        android:layout_weight="3"
        android:text="Submit"
        android:textSize="14dp"
        android:background="@drawable/light_blue_gradient"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:padding="10dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_otp_no"
        android:orientation="horizontal"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.vip.android.viptechnician.util.MonteserattEditText
            android:id="@+id/edit_otp_no"
            android:layout_weight="7"
            android:textSize="14dp"
            android:hint="Enter OTP"
            android:inputType="number"
            android:maxLines="1"
            android:background="@drawable/black_border"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <com.vip.android.viptechnician.util.MonserattTextview
            android:id="@+id/text_submit_otp_no"
            android:layout_weight="3"
            android:text="Submit"
            android:textSize="14dp"
            android:background="@drawable/light_blue_gradient"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:padding="10dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_new_pass"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.vip.android.viptechnician.util.MonteserattEditText
            android:id="@+id/edit_new_pass"
            android:textSize="14dp"
            android:focusable="true"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@drawable/black_border"
            android:textColor="#000000"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.vip.android.viptechnician.util.MonteserattEditText
            android:id="@+id/edit_confirm_pass"
            android:textSize="14dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:maxLines="1"
            android:background="@drawable/black_border"
            android:textColor="#000000"
            android:layout_marginTop="16dp"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <com.vip.android.viptechnician.util.MonserattTextview
            android:id="@+id/text_submit_pass"
            android:text="Submit"
            android:textSize="14dp"
            android:background="@drawable/light_blue_gradient"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>