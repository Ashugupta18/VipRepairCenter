<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.vip.android.viptechnician.util.MonserattTextview
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/white_border_rect"
        android:text="Ticket ID"
        android:textSize="18dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="20dp"
        android:paddingTop="10dp"
        android:gravity="center"
        android:textColor="#000000"
        android:translationZ="4.0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/monserattTextview" />

    <LinearLayout
        android:id="@+id/linear_ticket_main"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="15dp"
        android:orientation="vertical"
        android:elevation="4dp"
        android:background="@drawable/white_border_rect_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:orientation="vertical">

            <com.vip.android.viptechnician.util.MonserattTextViewRegular
                android:id="@+id/text_ticket_number"
                android:text="12345678"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layout_ticket_name"
                android:orientation="horizontal"
                android:layout_marginTop="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.vip.android.viptechnician.util.MonserattTextViewRegular
                    android:id="@+id/text_ticket_name"
                    android:text="Name:"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.vip.android.viptechnician.util.MonserattTextview
                    android:id="@+id/text_ticket_name_value"
                    android:text="Abhiraj Shetye"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ticket_phone"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.vip.android.viptechnician.util.MonserattTextViewRegular
                    android:id="@+id/text_ticket_phone"
                    android:text="Phone:"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.vip.android.viptechnician.util.MonserattTextview
                    android:id="@+id/text_ticket_phone_value"
                    android:text="022-1234567"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_ticket_address"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                >

                <com.vip.android.viptechnician.util.MonserattTextViewRegular
                    android:id="@+id/text_ticket_address"
                    android:text="Address:"
                    android:textSize="16dp"
                    android:padding="5dp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <com.vip.android.viptechnician.util.MonserattTextview
                    android:id="@+id/text_ticket_address_value"
                    android:text="address line,address line,address line"
                    android:textSize="14dp"
                    android:textColor="#000000"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.vip.android.viptechnician.util.MonserattTextViewRegular
        android:id="@+id/button_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Detail"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:elevation="4dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/light_blue_gradient" />

</RelativeLayout>
